#initialize the different Screens
#:import platform kivy.utils.platform

#:import Clipboard kivy.core.clipboard.Clipboard

<WindowManager>:


    MainMenu:  


<MainMenu>:
    name:"main"




        
#:import Window kivy.core.window.Window
    FloatLayout:
        orientation:"vertical"
        #size: root.width, root.height

        

        Image:
            source: 'Dijkstra Graph.jpg'  # your image here
            size: Window.size
            #size_hint: None, None 
            allow_stretch: True 
            keep_ratio: False   

        MDFillRoundFlatButton:
            id: departure
            text: "Departure"
            font_size: 15
            text_color: 32/255, 31/255, 14/255, 1 
            pos_hint: {'x':0.5, 'y':0.94}

